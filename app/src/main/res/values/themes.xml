<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AmityImageFeed" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_grey</item>
        <item name="colorPrimaryVariant">@color/dark_grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AmityImageFeed" parent="Base.Theme.AmityImageFeed"/>

    <style name="Theme.AmityImageFeed.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AmityImageFeed.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="AmityCircularAvatarStyle">
        <item name="android:scaleType">centerInside</item>
        <item name="shapeAppearanceOverlay">@style/AmityCircleImage</item>
    </style>

    <style name="AmityCircleImage">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

</resources>